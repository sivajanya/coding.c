#include <stdio.h>
int main() { 
   char str[100];
   int i;
   printf("enter string\n");
   gets(str);
   printf("uppercase string\n") ;
   for(i=0;str[i]!='\0';i++)
   {
      
       if(i%2==1)
       {
           str[i]=str[i]-32;
       
       }
       else
       str[i]=str[i]-0;
       
   }
puts(str) ;
         return 0;
}
