#include <stdio.h>
int main() {
    int i,j,n;
    char ch='A';
    char x='a';
    printf( "enter n value:");
    scanf( "%d",&n);
   
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf( "%c%c\t",ch,x);
            ch++;
            x++;
        }
        printf( "\n");
    }
    return 0;
}
